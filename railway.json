{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "python smart_secretary.py",
    "healthcheckPath": "/",
    "restartPolicy": {
      "maxRetries": 10,
      "backoff": 5
    }
  },
  "services": [
    {
      "name": "Secretary Storage",
      "type": "volume",
      "mountPath": "/app/sessions"
    }
  ]
}
